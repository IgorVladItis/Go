{% extends 'main/base.html.twig' %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
        .list{
            margin-top: 2rem;
        }
        .game-list {
            width: 100%;
            margin: 2rem;
        }

        .game-list > li {
            width: 100%;
            font-size: 16px;
            padding: 0.2rem;
            float: left;
        }
    </style>
    <div class="list">
        <ul class="game-list">
            {% for game in all_game %}
                <li>
                    <a href="/game/{{ game.id }}/show">{{ game.PW }}-{{ game.PB }}</a>
                </li>
            {% endfor %}
        </ul>
    </div>
    <div class="example-wrapper">

        {{ form_start(form) }}
        {{ form_row(form.fileName) }}
        {{ form_end(form) }}

    </div>

{% endblock %}
